<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Posts</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU"
      crossorigin="anonymous"
    />
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/style.css" />

    <style>
      body {
        background: #f3f2ee;
      }
    </style>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">waawsocial</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarText"
          aria-controls="navbarText"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarText">
          <ul class="navbar-nav hidelinks me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="#">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Features</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Pricing</a>
            </li>
          </ul>
          <% if (isAuthenticated) {%>
          <div class="postsearch">
            <form action="/post/search" method="post">
              <input
                type="search"
                name="search"
                id=""
                placeholder="Search for a post..."
                autocomplete="off"
              />
              <button type="submit">Search</button>
            </form>
          </div>
          <div
            class="username-circle"
            style="background: #ffffff; color: #000000"
          >
            <%-user.initials%>
          </div>
          <a class="navbar-text" href="/user/profile">View your own posts</a>
          <a class="navbar-text px-3" href="/auth/logout">Logout</a>
          <%} else { %>
          <div class="postsearch">
            <form action="/post/search" method="post">
              <input
                type="search"
                name="search"
                id=""
                placeholder="Search for a post..."
                autocomplete="off"
                required
              />
              <button type="submit">Search</button>
            </form>
          </div>
          <a class="navbar-text" href="/auth/register">Register</a>
          <a class="navbar-text px-3" href="/auth/login">Login</a>
          <% } %>
        </div>
      </div>
    </nav>

    <div class="post__form" style="margin-top: 100px">
      <div class="flashmessages" style="top: 200px; width: 50vw">
        <%- include('../messages') -%>
      </div>
      <div class="form">
        <%if(isAuthenticated) { %>
        <div class="text-icon-form">
          <img class="userimage" src="<%-user.userImage%>" alt="" />Hi
          <%-user.username||user.name%>! Click on the + button to get started.
          <span class="material-icons icons-form" id="add">add_circle</span>
        </div>
        <form
          action="/post/add-post"
          id="showBox"
          class="hideBox"
          method="post"
        >
          <% } else { %>
          <div class="text-icon-form">
            <span class="material-icons">face</span>Hi! Please Login in to
            create a post
            <span class="material-icons icons-form" id="add">add_circle</span>
          </div>
          <%}%>
          <div class="modal-body">
            <textarea
              name="body"
              id="textarea"
              cols="60"
              rows="3"
              maxlength="160"
              laceholder="What's on your mind?"
              required
            ></textarea>
            <small id="notifyarea"></small>
            <small style="color: red; font-size: small"
              >**Only 160 characters allowed**</small
            >
          </div>
          <div class="modal-footer">
            <button type="submit" class="btn btn-primary">Create Post</button>
          </div>
        </form>
      </div>

      <div class="postcard">
        <% for(let post of posts){ %>
        <div class="post" style="background: #ffffff">
          <%if(isAuthenticated) { %>
          <div class="username-circle">
            <img src="<%-post.userImage%>" alt="" />
          </div>
          <% } else { %>
          <div class="username-circle material-icons">face</div>
          <% }%>
          <div class="username-time">
            <strong class="username"> <%- post.user%></strong>
            <span>Posted <%- moment(post.createdAt).fromNow() %></span>
            <div class="options" style="position: absolute; left: 100%">
              <a
                class="material-icons"
                href="/post/deletepost/<%-post.userId%>/<%-post._id%>"
                style="font-size: 20px; text-decoration: none; color: gray"
                >delete</a
              >
            </div>
          </div>

          <div class="text"><%- post.body%></div>
          <div class="post__likes">
            <span class="" style="padding: 0 20px; font-size: 14px">
              <%-post.likedBy.length%>
              <!-- <span class="hidelike ">users likes this post.</span> -->
            </span>

            <a href="/like/add-like/<%-post.id%>">
              <span class="material-icons"> thumb_up </span></a
            >
          </div>

          <div class="post__comments">
            <%-post.comments.length %>
            <span class="material-icons">comment</span>
          </div>

          <div class="comment-form ml-3" style="border-top: 1px solid #e6e6e6">
            <form
              class="mt-2 ml-2"
              action="/comment/add-comment/<%-post._id%>"
              method="post"
            >
              <input
                type="text"
                style="padding-left: 25px"
                name="comment"
                placeholder="Add a comment..."
                required
              />
              <% if(isAuthenticated){%>
              <img
                style="
                  width: 20px;
                  height: 20px;
                  border-radius: 100%;
                  position: relative;
                  right: 85%;
                  top: -2px;
                "
                src="  <%-user.userImage%>"
                alt=""
              />
              <%} else { %>
              <span
                class="material-icons"
                style="
                  width: 20px;
                  height: 20px;
                  border-radius: 100%;
                  position: relative;
                  right: 85%;
                  top: 5px;
                "
                >face
              </span>
              <%}%>

              <button type="submit">
                <span class="material-icons">send</span>
              </button>
            </form>
          </div>
          <div class="commentarea pl-4">
            <%for (comment of post['comments']) {%>
            <div class="commentbody">
              <img
                style="width: 20px; height: 20px; border-radius: 100%"
                src="  <%-comment.user.userImage%>"
                alt=""
              />
              <strong style="margin-right: 4px">
                <%-comment.user.username ||comment.user.name %>
              </strong>
              <%-comment.body%>
            </div>
            <div
              class="commenttimestamps"
              style="color: gray; font-size: small"
            >
              &ndash; &nbsp; <%- moment(comment.createdAt).fromNow() %> <%for
              (reply of comment.comments.body){%>

              <p>
                <strong
                  >@<%-comment.comments.username||comment.comments.name%></strong
                >
                <%-reply%>
              </p>
              <%}%>
            </div>
            <form
              class="mt-2 ml-2"
              action="/comment/reply-comment/<%-comment._id%>"
              method="post"
            >
              <input
                type="text"
                style="
                  padding: 5px 25px;
                  width: 80%;
                  border-radius: 50px;
                  border: 1px solid #e6e6e6;
                "
                name="reply"
                placeholder="Reply this comment..."
                required
              />
              <% if(isAuthenticated){%>
              <img
                style="
                  width: 20px;
                  height: 20px;
                  border-radius: 100%;
                  position: relative;
                  right: 80%;
                  top: -2px;
                "
                src="  <%-user.userImage%>"
                alt=""
              />
              <%} else { %>
              <span
                class="material-icons"
                style="
                  width: 20px;
                  height: 20px;
                  border-radius: 100%;
                  position: relative;
                  right: 80%;
                  top: 5px;
                "
                >face
              </span>
              <%}%>

              <button type="submit" style="background: none">
                <span class="material-icons" style="color: #112031">reply</span>
              </button>
            </form>
            <br />
            <%}%>
          </div>
        </div>
        <%}%>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ"
      crossorigin="anonymous"
    ></script>
    <script>
      let click = document.querySelector("#add");
      let showBox = document.querySelector("#showBox");
      click.addEventListener("click", () => {
        showBox.classList.toggle("showBox");
      });

      let textLength = document.querySelector("#textarea");
      let displayArea = document.querySelector("#notifyarea");
      textLength.addEventListener("input", function (e) {
        displayArea.innerHTML = `You have ${
          160 - e.target.value.length
        } characters left.`;
      });
    </script>
  </body>
</html>
